{{> menu}}

<section class="ui segment">
  <h2 class="ui huge header aligned violet header">
    {{station.title}}
  </h2>
    {{> stationsummary}}
  <div class="ui segment" id="chart"></div>

<script>
const data = {
    labels: ["12am-3am", "3am-6am", "6am-9am", "9am-12pm",
		"12pm-3pm", "3pm-6pm", "6pm-9pm", "9pm-12am"],
    datasets: [
        {
            name: "Temperature", type: "line",
            values: [{{#each station.readings}}{{temperature}}, {{/each}}]
        }
    ]
};
  new frappe.Chart("#chart", {
    title: "Trend Chart",
    data: data,
    type: "line",
    height: 200,
    colors: ["red", "blue"]
  });
  </script>
  
    {{> listreadings}}
    {{> addreading}}
</section>
<form class="ui stacked segment form" action="/station/{{station.id}}/addreport" method="POST">
  <section class="ui center aligned middle aligned segment">
<button class="ui centered red submit button">Auto Update Readings</button>
</section>
</form>
<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
</form>